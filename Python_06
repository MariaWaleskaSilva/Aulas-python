def boasvindas(nome, cargo):
  print('Ola, ' + cargo + '' + nome)
  
boasvindas('Amarelinha', 'Engenharia')
boasvindas('jorge', 'Carimbador')
boasvindas('Maria', 'Sargento')




def somanotas(*notas):
  soma = 0 
  for nota in notas:
    soma += nota
  print(soma)
  
  somanotas(9, 8, 10, 7, 9, 8)
