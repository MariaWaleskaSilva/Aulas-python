def imc(peso, altura):
  return peso/altura**2
     
     def situacaoPeso(imc):
  if(imc < 18.5):
    print('Abaixo do peso normal')
  elif(imc < 24.9):
    print('Peso normal')
  else:
    print('Obesidade')
    
    situacaoPeso(imc(92, 1.73))
    
    
    
